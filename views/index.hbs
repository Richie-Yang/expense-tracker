<select class="form-select" aria-label="Default select example">
  <option value="全部">全部</option>
  {{#each categories}}
    <option value="{{this.name}}">{{this.name}}</option>
  {{/each}}
</select>

<div class="d-flex justify-content-between mt-4">
  <h3>總金額:</h3>
  <h1 id="total-amount">{{totalAmount}}</h1>
</div>

{{#if records}}
<div id="record-table" class="d-flex d-md-block mt-4">
  <table class="table table-striped table-hover">
    <tbody>
      {{#each records}}
        <tr>
          <td>icon</td>
          <td>{{this.name}}</td>
          <td>{{this.amount}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <table class="w-50 w-md-100 table table-borderless">
    <tbody>
      {{#each records}}
      <tr>
        <td><a href="/records/{{this._id}}/edit" class="text-decoration-none">修改</a></td>
        <td>
          <form action="/records/{{this._id}}?_method=DELETE" method="POST">
            <button type="submit" class="custom-delete-btn nav-link">刪除</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{/if}}

<div class="w-100 mt-5">
  <a href="/records/new" class="btn btn-primary w-75 mx-auto d-block">新增支出</a>
</div>

